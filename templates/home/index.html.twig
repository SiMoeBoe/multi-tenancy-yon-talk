{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello!</h1>

    <p>You're logged in, identified with "{{ user_identifier }}".</p>

    <p>The current tenant is <b>{{ tenant.name }}</b> with the ID <b>#{{ tenant.id }}</b> for the domain <b>{{ tenant.domain }}</b>.</p>

    <h2>Add new BlogPost</h2>
    {{ form(form) }}

    <h2>All BlogPosts</h2>
    {% for blogPost in blogPosts %}
        <h3>{{ blogPost.getTitle() }}</h3>
        <p>{{ blogPost.getContent() }}</p>
    {% endfor %}
</div>
{% endblock %}
